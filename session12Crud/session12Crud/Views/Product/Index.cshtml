@* @using session12Crud.Models *@
@* @model List<Product> *@
@model IEnumerable<Product>

<h2>All products</h2>

<a asp-controller="Product" asp-action="AddProduct">Add new product</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Product</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>
                    <a class="btn btn-outline-primary" asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductId">Edit</a>
                    <form class="mt-3" method="post">
                        <button class="btn btn-outline-danger" type="submit" asp-controller="Product" asp-action="Delete" asp-route-id="@product.ProductId">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>